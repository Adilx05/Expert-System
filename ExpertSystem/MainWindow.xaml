<mah:MetroWindow x:Class="ExpertSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpertSystem"
        mc:Ignorable="d"
        Title="Bilgisayar Destekli Endüstriyel Tasarım Problemlerinin Tespiti ve Problem Çözümü İçin Uzman Sistem" Height="450" Width="800">
    <Grid>
        <mah:MetroAnimatedTabControl>
            <TabItem Header="Sorun Bul">
                <Grid Background="#FFE5E5E5">
                    <Label HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="207" Width="780" Name="SorunLabel">
                    </Label>
                    <StackPanel Margin="0,222,0,0" Orientation="Horizontal" Name="BtSp" ScrollViewer.HorizontalScrollBarVisibility="Auto" MinWidth="200">
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Sorun Ekle">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Name="CevapSayiSp" Margin="0,0,0,75" CanVerticallyScroll="True">
                        <TextBox TextWrapping="Wrap" Text=""  mah:TextBoxHelper.Watermark="Sorun Açıklaması" Name="SorunTx"/>
                        <mah:NumericUpDown Name="CevapSayisi" ValueChanged="CevapSayisi_ValueChanged" NumericInputMode="Decimal" > </mah:NumericUpDown>
                    </StackPanel>
                    <Button Content="Ekle" HorizontalAlignment="Left" Margin="723,344,0,0" VerticalAlignment="Top" Click="Button_Click"/>
                    <Button Content="Alt Başlık Ekle" HorizontalAlignment="Left" Margin="47,344,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
                    <Button Content="Dbden Al" HorizontalAlignment="Left" Margin="357,344,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>

                </Grid>
            </TabItem>
        </mah:MetroAnimatedTabControl>
        
        

    </Grid>
</mah:MetroWindow>
